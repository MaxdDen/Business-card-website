# ======================================
# CMS для сайта-визитки - Конфигурация
# ======================================

# Окружение (development или production)
ENVIRONMENT=development

# База данных
DATABASE_PATH=data/app.db

# JWT конфигурация
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=15

# Google OAuth (опционально)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Поддерживаемые языки (через запятую)
SUPPORTED_LANGUAGES=ru,en,ua
DEFAULT_LANGUAGE=ru

# Настройки сервера
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000

# Безопасность
SECURE_COOKIES=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60

# Кэширование
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Загрузка файлов
MAX_FILE_SIZE_MB=2
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,ico
UPLOAD_DIR=uploads

# Оптимизация изображений
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
WEBP_QUALITY=80

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email уведомления (опционально, для будущего использования)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Резервное копирование (опционально, для будущего использования)
BACKUP_ENABLED=false
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Дебаг режим
DEBUG=false

